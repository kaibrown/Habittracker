
<h1>Your Habits</h1>

<h3> Habits to make </h3>

<table>
    <tr>
        <th>Name</th>
        <th>Complete Action</th>
    </tr>
    {{#each habits}}
        {{#if this.make}}
            <tr>
                <td><a href="#">{{this.name}}</a></td>
                {{#if this.progress}}
                    <td><label><input disabled checked="checked" type="checkbox" value="done" id={{this.id}}>Done</label></td>
                {{/if}}
                {{#unless this.progress}}
                      <td><label><input type="checkbox" value="done" id={{this.id}}>Complete?</label></td>
                {{/unless}}
            </tr>
        {{/if}}
    {{/each}}
</table>


<h3> Habits to break </h3>
<table>
    <tr>
        <th>Name</th>
        <th>Complete Action</th>
